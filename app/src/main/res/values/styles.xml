<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>

    </style>


    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="DrinklyTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@color/accent_material_dark_1</item>
        <item name="colorAccent">?android:attr/colorPressedHighlight</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimary">@color/accent_material_dark_1</item>
    </style>
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/NegativeButtonStyle </item>
        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat</item>
        <item name="android:colorForeground">@android:color/white</item>
    </style>


    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#ffff4444</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium" parent="android:TextAppearance.Holo.Medium">
        <item name="android:font" tools:targetApi="26">@font/boogaloo</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="homeScreenTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:colorBackground">@color/design_default_color_primary</item>
        <item name="android:windowBackground">@color/design_default_color_primary</item>
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorAccent">@android:color/holo_orange_light</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="HomeScreenTheme" parent="AppTheme" >
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="android:colorBackground">@android:color/holo_blue_light</item>
        <item name="colorAccent">@color/holo_orange_light</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="CocktailTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="android:colorBackground">@color/cocktail_background</item>
        <item name="colorAccent">@color/cocktail_background</item>
        <item name="android:windowBackground">@color/cocktail_background</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@color/cocktail_background</item>
    </style>

    <style name="DrinksTheme" parent="homeScreenTheme" >
        <item name="android:colorBackground">@color/holo_purple</item>
        <item name="colorPrimary">@color/holo_purple</item>
        <item name="android:windowBackground">@color/holo_purple</item>
    </style>

    <style name="homeScreenThemeHalloween" parent="homeScreenTheme" >
        <item name="colorPrimary">@color/holo_blue_dark</item>
        <item name="android:colorBackground">@color/holo_blue_dark</item>
        <item name="android:windowBackground">@color/holo_blue_dark</item>
    </style>

    <style name="CocktailThemeHalloween" parent="CocktailTheme" />

    <style name="DrinklyThemeHalloween" parent="DrinklyTheme" />

    <style name="DrinksThemeHalloween" parent="DrinksTheme" />

</resources>
